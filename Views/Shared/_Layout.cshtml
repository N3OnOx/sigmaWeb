<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/img/favicon.png">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/InventarioStyle.css">
    <!-- LINK DATATABLES -->
    <link rel="stylesheet" href="~/DataTables/datatables.css">

</head>
<body onload="mostrarHora()">
    <div class="container-fluid">
        <header>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3 logo">
                        <img alt="Logo IMESAPI" src="~/img/logoImesapiColor.png">
                    </div>
                    <div class="col-md-6 text-center pt-3" style="color: #0D237D; ">
                        <h4>Sistema de Control de Alumbrado: SIGMA</h4>
                        <h1><strong>INVENTARIO DE CENTROS DE MANDO</strong></h1>
                    </div>
                    <div class="col-md-3">   
                        <div class="p-3" style="max-width: 55%; background: transparent; margin: 0 auto; border-radius: 10px;">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <div class="text-center panelObra">
                                        <form>
                                            <button class="btn buttonControlPanel"><i class="fas fa-cogs"></i></button>
                                        </form>
                                        <form>
                                            <button class="btn buttonControlPanel"><i class="fas fa-exchange-alt"></i></button>
                                        </form>
                                        <form>
                                            <button class="btn buttonControlPanel"><i class="fas fa-users-cog"></i></button>
                                        </form>
                                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                            <button class="btn buttonControlPanel"><i class="fas fa-power-off"></i></button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center mt-2" style="color: #0D237D; background:#11B75E; border-radius: 5px; padding: 7px; color: ghostwhite">
                                <span><i class="fa fa-user"></i> Administrador</span><br />
                                <span><i class="fa fa-globe" aria-hidden="true"></i> Valencia</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>            
        </header>
        <div class="row">
            <div class="sidebar col-lg-2">
                <div class="sideNavInventaryPage">
                    <a href="inventario.html">
                        <div class="row sideNavGroupInventaryPage active">
                            <div class="col-lg-3 icono"><i class="fas fa-boxes"></i></div>
                            <div class="col-lg-9"><strong>Inventario</strong></div>
                        </div>
                    </a>
                    <a href="telecontrol.html">
                        <div class="row sideNavGroupInventaryPage">
                            <div class="col-lg-3 icono"><i class="fas fa-laptop"></i></div>
                            <div class="col-lg-9"><strong>Telecontrol</strong></div>
                        </div>
                    </a>
                    <a href="mantenimiento.html">
                        <div class="row sideNavGroupInventaryPage">
                            <div class="col-lg-3 icono"><i class="fas fa-wrench"></i></div>
                            <div class="col-lg-9"><strong>Mantenimiento</strong></div>
                        </div>
                    </a>
                    <a href="gestorEnergetico.html">
                        <div class="row sideNavGroupInventaryPage">
                            <div class="col-lg-3 icono"><i class="fas fa-sun"></i></div>
                            <div class="col-lg-9"><strong>Gest.Energético</strong></div>
                        </div>
                    </a>
                    <a href="informes.html">
                        <div class="row sideNavGroupInventaryPage">
                            <div class="col-lg-3 icono"><i class="fas fa-newspaper"></i></div>
                            <div class="col-lg-9"><strong>Informes</strong></div>
                        </div>
                    </a>
                    <a href="facturacion.html">
                        <div class="row sideNavGroupInventaryPage">
                            <div class="col-lg-3 icono"><i class="fas fa-file-invoice-dollar"></i></div>
                            <div class="col-lg-9"><strong>Facturación</strong></div>
                        </div>
                    </a>
                </div>
            </div>
            @RenderBody()
        </div>
<!-- footer -->
<footer>
    <div class="row">
        <div class="col-lg-2 offset-2 text-center">
            <img alt="Logo IMESAPI" src="img/logoImesapiBlanco.png">
        </div>
        <div class="col-lg-8">
            <div class="row paginasFooterLoginPage">
                <p><a href="http://www.imesapisistemas.com/"><strong>www.imesapisistemas.com</strong></a></p>
                <p><strong>&copy;IMESAPI S.A. Sistema de Control de Alumbrado SIGMA</strong></p>
                <p><a href="http://www.imesapi.es/"><strong>www.imesapi.es</strong></a></p>
                <p><a href="http://sigma-system.info/Documentos/Aviso%20Legal.pdf"><strong>Aviso Legal</strong></a></p>
                <p><strong>El registro en esta plataforma implica la aceptación expresa y sin reservas de la política de privacidad.</strong></p>
                <p><a href="http://sigma-system.info/Documentos/Pol%C3%ADtica%20de%20Privacidad.pdf"><strong>Política de Privacidad</strong></a></p>
            </div>
        </div>
    </div>
</footer>
</div>
<!-- SCRIPTS DATATABLES -->
<script src="https://code.jquery.com/jquery-3.3.1.min.js" type="text/javascript"></script>
<script type="text/javascript" src="~/DataTables/datatablesInventario.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/js/bootstrap.min.js" integrity="sha384-7aThvCh9TypR7fIc2HV4O/nFMVCBwyIUKL8XCtKE+8xgCgl/PQGuFsvShjr74PBp" crossorigin="anonymous"></script>
<script src="~/js/site.js"></script>
<script src="~/js/inventario.js"></script>
</body>
</html>
